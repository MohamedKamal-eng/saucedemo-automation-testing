<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SauceDemo_fullSuite" verbose="1" preserve-order="true" >  <!--    parallel="classes" thread-count="4"-->
    <listeners>
        <listener class-name="com.saucedemo.listeners.TestResultListener"/>
        <listener class-name="com.saucedemo.tests.utils.listeners.TestListener"/>
    </listeners>
    <test name="E2E Tests">
            <classes>
                <class name="com.saucedemo.tests.e2e.StandardPurchaseTest"/>
                <class name="com.saucedemo.tests.e2e.LogoutLoginE2ETest"/>
                <class name="com.saucedemo.tests.e2e.PersonaE2ETest"/>
                <class name="com.saucedemo.tests.e2e.ResetAppStateE2ETest"/>
                <class name="com.saucedemo.tests.e2e.SmokeOpenInventoryTest"/>


            </classes>
    </test>
    <test name="Features Tests">
        <classes>
            <class name="com.saucedemo.tests.login.LoginTests"/>
            <class name="com.saucedemo.tests.cart.CartTests"/>
            <class name="com.saucedemo.tests.inventory.InventoryTests"/>
            <class name="com.saucedemo.tests.checkout.CheckoutStepOneTests"/>
            <class name="com.saucedemo.tests.checkout.CheckoutStepTwoTests"/>
            <class name="com.saucedemo.tests.checkout.CheckoutCompleteTests"/>
            <class name="com.saucedemo.tests.menu.SideMenuTests"/>
            <class name="com.saucedemo.tests.product.ProductDetailsTests"/>
            <class name="com.saucedemo.tests.security.SecurityTests"/>
            <class name="com.saucedemo.tests.session.SessionTests"/>
        </classes>
    </test>
</suite>
